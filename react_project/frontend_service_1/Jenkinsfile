pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'bhoomika2897n/frontend-service'
        IMAGE_TAG = 'latest'
        DOCKER_CREDENTIALS_ID = 'Docker_cred' // Replace with your actual ID
    }

    stages {
        stage('Checkout') {
            steps {
                // This assumes you're already in the correct project structure in Jenkins
                echo "Checking out source code..."
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('react_project/frontend_service_1') {
                    script {
                        echo "Building Docker image ${DOCKER_IMAGE}:${IMAGE_TAG}"
                        dockerImage = docker.build("${DOCKER_IMAGE}:${IMAGE_TAG}")
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                dir('react_project/frontend_service_1') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                            echo "Pushing Docker image ${DOCKER_IMAGE}:${IMAGE_TAG}"
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and push successful!'
        }
        failure {
            echo 'Build or push failed.'
        }
    }
}
